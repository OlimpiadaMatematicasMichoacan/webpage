---
import PageLayout from '../layouts/PageLayout.astro';
import Hero from '../components/Hero.astro';
import PostList from '../components/PostList.astro';
import Numbers from '../components/Numbers.astro';
import Values from '../components/Values.astro';
import Sponsors from '../components/Sponsors.astro';
import Testimonials from '../components/Testimonials.astro';
import { getSite } from '../utils/consts';
const site = await getSite();
---

<PageLayout
	title={site.title}
>
	<Hero
		title="Olimpiada Michoacana de Matemáticas"
		highlight="¡Participa!"
		description="Promovemos el talento matemático en Michoacán a través de competencias, entrenamientos y comunidad."
		actions={[
			{ label: 'Convocatoria', href: '/convocatoria' },
			{ label: 'Conoce al equipo', href: '/acerca' },
		]}
	/>

	<Sponsors />

	<Numbers
		eyebrow="Resultados"
		title="Impacto en números"
		copy="Años de trabajo formando talento matemático."
		stats={[
			{ label: 'Participantes', value: '500+', description: 'Estudiantes que han participado en la OMM.' },
			{ label: 'Años activos', value: '20+', description: 'Formando talento matemático.' },
			{ label: 'Medallas nacionales', value: '48', description: 'En la Olimpiada Nacional.' },
			{ label: 'Sedes', value: '5', description: 'En todo Michoacán.' },
		]}
	/>

	<Values
		eyebrow="Valores"
		title="Nuestra filosofía"
		copy="Principios que guían nuestra misión educativa."
		values={[
			{ title: 'Excelencia', description: 'Buscamos el más alto nivel de razonamiento y resolución de problemas.' },
			{ title: 'Comunidad', description: 'Creamos un espacio donde estudiantes comparten su pasión por las matemáticas.' },
			{ title: 'Accesibilidad', description: 'Las matemáticas son para todos, sin importar origen o recursos.' },
			{ title: 'Mentoría', description: 'Exalumnos y profesores guían a las nuevas generaciones.' },
		]}
	/>

	<Testimonials
		eyebrow="Testimonios"
		title="Lo que dicen"
	/>

</PageLayout>
