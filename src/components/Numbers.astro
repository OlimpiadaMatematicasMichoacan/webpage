---
interface Stat {
  label: string;
  value: string;
  description?: string;
}

interface Props {
  title?: string;
  eyebrow?: string;
  copy?: string;
  stats?: Stat[];
}

const {
  title = 'Resultados',
  eyebrow,
  copy,
  stats = [],
} = Astro.props as Props;

const colors = [
  'var(--color-brand-orange)',
  'var(--color-brand-pink)',
  'var(--color-brand-green)',
  'var(--color-brand-blue)',
];
---

<section class="flex flex-col gap-1">
  <div class="rounded-xl overflow-hidden p-5 md:p-10 flex bg-[var(--color-paper)]">
    <div class="space-y-2 max-w-2xl">
      {eyebrow && <p class="text-sm font-semibold uppercase tracking-widest text-[var(--color-ink)]  m-0">{eyebrow}</p>}
      {title && <h2 class="md:text-2xl text-xl md:leading-tight antialiased m-0">{title}</h2>}
      {copy && <p class="text-base text-[var(--color-ink)]  m-0">{copy}</p>}
    </div>
  </div>
  {stats.length > 0 && (
    <div class="grid gap-1 sm:grid-cols-2 lg:grid-cols-4">
      {stats.map((stat, i) => (
        <div class="rounded-xl p-5 md:p-8 flex flex-col gap-3" style={`background: ${colors[i % colors.length]}`}>
          <p class="text-4xl sm:text-5xl font-bold tracking-tight text-[var(--color-ink)]  m-0">{stat.value}</p>
          <p class="text-sm uppercase tracking-[0.22em] text-[var(--color-ink)]  m-0">{stat.label}</p>
          {stat.description && <p class="text-sm text-[var(--color-ink)]  m-0 mt-auto">{stat.description}</p>}
        </div>
      ))}
    </div>
  )}
</section>
